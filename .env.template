# ============================
# PrepPal Environment (.env)
# ============================

# ---------------------------------------------
# GOOGLE GENERATIVE AI (REQUIRED)
# ---------------------------------------------
GOOGLE_API_KEY=

# ---------------------------------------------
# AGORA CONFIGURATION (FOR CONVERSATIONAL AI)
# ---------------------------------------------
AGORA_APP_ID=
AGORA_APP_CERT=

# Agora REST API authentication (MUST HAVE)
AGORA_CUSTOMER_ID=
AGORA_CUSTOMER_SECRET=

# Optional temporary RTC token (optional for testing)
AGORA_TEMP_AGENT_TOKEN=

# ---------------------------------------------
# AGORA Conversational AI LLM/TTS configuration
# ---------------------------------------------
EXTERNAL_LLM_URL=https://generativelanguage.googleapis.com/v1beta
EXTERNAL_LLM_API_KEY=
EXTERNAL_LLM_MODEL=gemini-2.0-flash

# Agora TTS (choose one vendor)
# AGORA_TTS_VENDOR=microsoft
# AGORA_TTS_KEY=
# AGORA_TTS_REGION=
# AGORA_TTS_VOICE=

# ElevenLabs TTS
AGORA_TTS_VENDOR=elevenlabs
AGORA_TTS_API_KEY=
AGORA_TTS_VOICE_ID=
AGORA_TTS_MODEL_ID=eleven_flash_v2_5

# ASR settings
AGORA_ASR_LANGUAGE=en-US

# ---------------------------------------------
# API CONFIG
# ---------------------------------------------
API_HOST=localhost
API_PORT=8000
DEBUG=True

# ---------------------------------------------
# STORAGE
# ---------------------------------------------
UPLOAD_DIR=./data/uploads
MAX_UPLOAD_SIZE=10485760

# ---------------------------------------------
# LLM Settings (Gemini for RAG system)
# ---------------------------------------------
LLM_MODEL=gemini-2.5-flash
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=5000

# ---------------------------------------------
# Embeddings (Gemini)
# ---------------------------------------------
EMBEDDING_MODEL=models/text-embedding-004
EMBEDDING_DIMENSION=768

# ---------------------------------------------
# RAG Configuration
# ---------------------------------------------
CHUNK_SIZE=500
CHUNK_OVERLAP=50
TOP_K_RESULTS=5


