# PrepPal Environment Configuration
# Copy this file to .env and fill in your actual values

# ============ Google Generative AI ============
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# ============ Agora Configuration (Optional) ============
# Sign up at: https://console.agora.io/
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERT=your_agora_app_certificate

# ============ API Configuration ============
API_HOST=localhost
API_PORT=8000
DEBUG=True

# ============ Database (Optional for production) ============
# DATABASE_URL=sqlite:///./preppal.db
# or for PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/preppal

# ============ Storage Configuration ============
UPLOAD_DIR=./data/uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# ============ LLM Settings ============
LLM_MODEL=gemini-2.5-flash
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# ============ Embeddings Settings ============
EMBEDDING_MODEL=models/embedding-001
EMBEDDING_DIMENSION=768

# ============ RAG Configuration ============
CHUNK_SIZE=500  # words per chunk
CHUNK_OVERLAP=50  # word overlap between chunks
TOP_K_RESULTS=5  # number of chunks to retrieve

# ============ Security (Production Only) ============
# SECRET_KEY=your_secret_key_here
# JWT_ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30